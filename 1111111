      <script type="text/javascript">
     function txtfocus(event){
         var   a=window.event;
         var obj=a.srcElement;
         obj.style.background="#FFFF66";
     }
     function txtblur(event){
         var   a=window.event;
         var obj=a.srcElement;
         obj.style.background="#FFFFFF";
     }
    </script>
